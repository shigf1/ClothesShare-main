<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/upload"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<!-- Main Content Area -->
<!-- Main Content Area -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your main content here -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="@string/upload_post_label"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/post_photo"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:cropToPadding="true" />

        <ImageButton
            android:id="@+id/upload_picture"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/add_photo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="@string/post_description_label"/>

    <EditText
        android:id="@+id/post_upload_description"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/post_description_hint"
        android:importantForAutofill="no"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="@string/post_story_label"/>

    <EditText
        android:id="@+id/post_upload_story"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/post_story_hint"
        android:importantForAutofill="no"
        android:inputType="text" />

    <Button
        android:id="@+id/post_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Tue April 1 1:36 CST 2025"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/upload_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        app:cornerRadius="0dp"/>

</LinearLayout>

<!-- Bottom Bar -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#F0F0F0"
    android:weightSum="4">

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:src="@drawable/homeicon"
        android:contentDescription="@string/home_button_description">
    </ImageButton>

    <ImageButton
        android:id="@+id/messagesbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/messagesicon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:contentDescription="@string/messages_button_description">
    </ImageButton>

    <ImageButton
        android:id="@+id/uploadbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/uploadicon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:contentDescription="@string/upload_button_description">
    </ImageButton>

    <ImageButton
        android:id="@+id/profilebutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/profileicon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:contentDescription="@string/profile_button_description">
    </ImageButton>


</LinearLayout>
</LinearLayout>