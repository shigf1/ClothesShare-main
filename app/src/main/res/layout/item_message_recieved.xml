<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:padding="12dp"
        android:textColor="#000000"
        android:text="Sample message being received"
        android:background="@drawable/bubble_recieved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#80000000"
        android:text="3:40 pm"
        app:layout_constraintStart_toEndOf="@id/message_text"
        app:layout_constraintTop_toTopOf="@id/message_text"
        android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>